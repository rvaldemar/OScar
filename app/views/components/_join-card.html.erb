<div class="panel-group">
  <div class="panel panel-default">
    <div class="panel-body">

      <div class="join-wrapper">
        <div class="join-left">
           <% if !user_signed_in? %>
              <div class="small-avatar" style="background-image: linear-gradient(-45deg, rgba(150,150,150,0.3) 0%, rgba(56,53,48,0.3) 33%, rgba(77,72,61,0.3) 51%, rgba(56,53,48,0.3) 93%, rgba(66,63,54,0.3) 100%), url(<%= asset_path('monkey_3.jpg')%>);">
              </div>
            <% else %>
              <div class="small-avatar" style="background-image: linear-gradient(-45deg, rgba(150,150,150,0.3) 0%, rgba(56,53,48,0.3) 33%, rgba(77,72,61,0.3) 51%, rgba(56,53,48,0.3) 93%, rgba(66,63,54,0.3) 100%), url(<%= current_user.avatar %>);">
              </div>
            <% end %>
        </div>
        <div class="join-info">
          <div class="join-name">
            <% if !user_signed_in? %>
              <h4>Please sign in to be able to apply to collaborate</h4>
            <% else %>
              <h4><%= current_user.name %></h4>
            <% end %>
          </div>
        </div>
        <div class="join-right">
          <% if !user_signed_in? %>
            <button type="button" class="btn btn-success btn-sm" id="btn-new-post" disabled>Apply for Collaboration</button>
          <% else %>
            <button type="button" class="btn btn-success btn-sm" id="btn-new-post">Apply for Collaboration</button>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>
