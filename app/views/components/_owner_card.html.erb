<div class="panel-group">
  <div class="panel panel-default">
    <div class="panel-body">
      <div class="single-owner-wrapper">
        <div class="owner-left">
          <div class="small-avatar" style="background-image: linear-gradient(-45deg, rgba(150,150,150,0.3) 0%, rgba(56,53,48,0.3) 33%, rgba(77,72,61,0.3) 51%, rgba(56,53,48,0.3) 93%, rgba(66,63,54,0.3) 100%), url(<%= repo.user.avatar.nil? ? asset_path('default_user.png') : repo.user.avatar %>);">
          </div>
        </div>
        <div class="owner-info">
          <h4>Owner</h4>
          <div class="owner-content">

            <p><strong>Owner name:</strong> <%= link_to repo.user.name, repo.user.github, target: "_blank" %></p>

            <p>Contact <%= repo.user.name %> on <a href='mailto:<%=repo.user.email %>'> <%= repo.user.email %></a></p>
          </div>
        </div>
        <div class="unshare-area">
          <% if current_user == repo.user %>
            <%= render 'components/unshare', repo: repo, message_unshare: "Unshare" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
