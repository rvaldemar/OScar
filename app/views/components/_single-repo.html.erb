<div class="panel-group">
  <div class="panel panel-default">
    <div class="panel-body">

      <div class="repo-show-wrapper">
        <div class="repo-left">
        </div>
        <div class="repo-info">
          <div class="repo-name">
            <h3><%= repo.name.capitalize %></h3>
          </div>
          <div class="repo-info">
            <p>Description:</p>
            <p><%= repo.description %></p>
          </div>
        </div>
        <div class="repo-right">
          <ul>
            <% collabNumber = repo.collaborations.where(accepted: true).length %>

            <% if collabNumber == 0 %>
              <li class='none'><h1><%= collabNumber %></h1></li>
            <% elsif collabNumber > 3 %>
              <li class='good'><h1><%= collabNumber %></h1></li>
            <% else %>
              <li class='low'><h1><%= collabNumber %></h1></li>
            <% end %>
            <li>Collaborators</li>
          </ul>
        </div>
        <div>
          <% if current_user == repo.user %>
           <button type="button" class="btn btn-outline-secondary btn-sm" id="btn-destroy-repo">Unshare</button>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
