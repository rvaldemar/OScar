<!-- Button trigger modal -->
<button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteRepoModal">
  <%= message_unshare %>
</button>

<!-- Modal -->
<div class="modal fade" id="deleteRepoModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">OScar - The Open Source Highway</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= "Do you really want to #{message_unshare.downcase}?" %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <%= link_to 'Confirm', repo_path(repo.id), method: :delete, :class => "btn btn-danger btn-sm" %>
      </div>
    </div>
  </div>
</div>
