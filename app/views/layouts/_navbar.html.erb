<div class="header">
  <a href="#"><div id="logo" style="background-image: url(<%= asset_path('logo.png')%>);">
  </div></a>

  <div class="header-content">
    <ul class="header-navigation">
      <li><%= link_to( "home", root_path) %></li>
      <% if !user_signed_in? %>
        <li><%= link_to( "sign in", user_github_omniauth_authorize_path) %></li>
      <% else %>
        <li><%= link_to( "my repositories", my_repos_path(current_user)) %></li>
        <li><%= link_to( "my collaborations", user_github_omniauth_authorize_path) %></li>
        <li><%= link_to( "sign out") %></li>
      <% end %>
    </ul>

  </div>

  <% if !user_signed_in? %>
    <div id="avatar" style="background-image: linear-gradient(-45deg, rgba(150,150,150,0.3) 0%, rgba(56,53,48,0.3) 33%, rgba(77,72,61,0.3) 51%, rgba(56,53,48,0.3) 93%, rgba(66,63,54,0.3) 100%), url(<%= asset_path('monkey_1.jpg')%>);">
    </div>
  <% else %>
    <div id="avatar" style="background-image: linear-gradient(-45deg, rgba(150,150,150,0.3) 0%, rgba(56,53,48,0.3) 33%, rgba(77,72,61,0.3) 51%, rgba(56,53,48,0.3) 93%, rgba(66,63,54,0.3) 100%), url(<%= current_user.avatar %>);">
    </div>
  <% end %>

</div>

