<div class="wrapper-main">
    <!-- Search form -->
  <input class="form-control" type="text" placeholder="Search" aria-label="Search">

    <% @repos.each do |repo|%>
      <div class="panel-group">
        <div class="panel panel-default">
          <div class="panel-body">

            <div class="single-post-wrapper">
              <div class="post-left">
                <div class="post-avatar" style="background-image: linear-gradient(-45deg, rgba(150,150,150,0.3) 0%, rgba(56,53,48,0.3) 33%, rgba(77,72,61,0.3) 51%, rgba(56,53,48,0.3) 93%, rgba(66,63,54,0.3) 100%), url('images/monkey_1.jpg');">
                </div>
              </div>
              <div class="post-info">
                <div class="post-title">
                  <%= link_to( repo.name, repo_path(repo.id)) %>
                  <a href="single.html"><h3>This is the post title</h3></a>
                </div>
                <div class="post-tags">
                  <span class="label label-info">Frontend</span>
                  <span class="label label-danger">Ruby</span>
                </div>
              </div>
              <div class="post-right">
                <ul>
                  <li class='resolved'>Resolved</li>
                  <li>10 replies</li>
                  <li>17 Jul 2018</li>
                  <li>by ddcoelho</li>
                </ul>
              </div>
            </div>

          </div>
        </div>
    <% end %>

</div>
