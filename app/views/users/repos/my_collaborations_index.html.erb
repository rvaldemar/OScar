<div class="wrapper-main">
    <!-- Search form -->
  <input class="form-control" type="text" placeholder="Search" aria-label="Search">

    <% @collabs.each do |collab|%>
      <div class="panel-group">
        <div class="panel panel-default">
          <div class="panel-body">

            <div class="single-post-wrapper">
              <div class="post-left">
                <div class="post-avatar" style="background-image: linear-gradient(-45deg, rgba(150,150,150,0.3) 0%, rgba(56,53,48,0.3) 33%, rgba(77,72,61,0.3) 51%, rgba(56,53,48,0.3) 93%, rgba(66,63,54,0.3) 100%), url(<%= asset_path('monkey_2.jpg')%>);">
                </div>
              </div>
              <div class="post-info">
                <div class="post-title">
                  <h3><%= link_to( collab.repo.name, repo_path(collab.repo.id)) %></h3>
                </div>
                <div class="post-tags">
                  <p><%= collab.repo.description %></p>
                </div>
                <% if !collab.accepted %>
                  <div class="post-tags">
                    <p>Your application is still waiting for acceptance. For now is: <span class="low">Pending</span> </p>
                  </div>
                <% end %>
              </div>
              <div class="post-right">
                <ul>
                  <% collabNumber = collab.repo.collaborations.where(accepted: true).length %>


                  <% if collabNumber == 0 %>
                    <li class='none'><h1><%= collabNumber %></h1></li>
                  <% elsif collabNumber > 3 %>
                    <li class='good'><h1><%= collabNumber %></h1></li>
                  <% else %>
                    <li class='low'><h1><%= collabNumber %></h1></li>
                  <% end %>
                  <li>Collaborations</li>
                </ul>
              </div>
            </div>

          </div>
        </div>

    <% end %>

</div>
