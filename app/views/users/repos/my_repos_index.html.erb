<div class="wrapper-main">
  <% if @repos.empty? %>
    <div id="new-post" class="top-margin">
      <div class="new-post-wrapper">
        <div class="form-group">
          <h1>Share your first repository!</h1>
        </div>
        <div>
          <form>
            <input type="checkbox" name="um" value="o que quero receber">
            <label for="um">1</label>



            First name: <input type="text" name="fname" value='rui'><br>







            <input type="checkbox" name="dois" value="o que quero receber">
            <label for="dois">2</label>

            Second name: <input type="text" name="sname" value='rui'><br>





            <button type="submit">Subscribe</button>
          </form>

        </div>
        <div class="new-post-buttons">
          <button type="button" class="btn btn-danger" id="btn-new-post-cancel">Nice!</button>
        </div>
      </div>
    </div>

  <% else %>
      <!-- Search form -->
    <input class="form-control" type="text" placeholder="Search" aria-label="Search">

      <% @repos.each do |repo|%>
        <div class="panel-group">
          <div class="panel panel-default">
            <div class="panel-body">

              <div class="single-post-wrapper">
                <div class="post-left">
                  <div class="post-avatar" style="background-image: linear-gradient(-45deg, rgba(150,150,150,0.3) 0%, rgba(56,53,48,0.3) 33%, rgba(77,72,61,0.3) 51%, rgba(56,53,48,0.3) 93%, rgba(66,63,54,0.3) 100%), url(<%= asset_path('monkey_2.jpg')%>);">
                  </div>
                </div>
                <div class="post-info">
                  <div class="post-title">
                    <h3><%= link_to( repo.name, repo_path(repo.id)) %></h3>
                  </div>
                  <div class="post-tags">
                    <p><%= repo.description %></p>
                  </div>
                </div>
                <div class="post-right">
                  <ul>
                    <!--<% collabNumber = @collabs %> -->

                    <% collabNumber = repo.collaborations.length %>


                    <% if collabNumber == 0 %>
                      <li class='none'><h1><%= collabNumber %></h1></li>
                    <% elsif collabNumber > 3 %>
                      <li class='good'><h1><%= collabNumber %></h1></li>
                    <% else %>
                      <li class='low'><h1><%= collabNumber %></h1></li>
                    <% end %>
                    <li>Collaborations</li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
      <% end %>
    <% end %>
</div>
