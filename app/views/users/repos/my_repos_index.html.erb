<div class="wrapper-main">
    <!-- Search form -->
  <%= render 'components/search-bar' %>

    <% @repos.each do |repo|%>
    <% #raise %>
      <div class="panel-group">
        <div class="panel panel-default">
          <div class="panel-body">

            <div class="single-post-wrapper">
              <div class="post-left">
                <div class="post-avatar" style="background-image: linear-gradient(-45deg, rgba(150,150,150,0.3) 0%, rgba(56,53,48,0.3) 33%, rgba(77,72,61,0.3) 51%, rgba(56,53,48,0.3) 93%, rgba(66,63,54,0.3) 100%), url(<%= asset_path('monkey_2.jpg')%>);">
                </div>
              </div>
              <div class="post-info">
                <div class="post-title">
                  <h3><%= link_to( repo.name, repo_path(repo.id)) %></h3>
                </div>
                <div class="post-tags">
                  <p><%= repo.description %></p>
                </div>
              </div>
              <div class="post-right">
                <ul>
                  <!--<% collabNumber = @collabs %> -->

                  <% collabNumber = repo.collaborations.length %>


                  <% if collabNumber == 0 %>
                    <li class='none'><h1><%= collabNumber %></h1></li>
                  <% elsif collabNumber > 3 %>
                    <li class='good'><h1><%= collabNumber %></h1></li>
                  <% else %>
                    <li class='low'><h1><%= collabNumber %></h1></li>
                  <% end %>
                  <li>Collaborations</li>
                </ul>
              </div>
            </div>

          </div>
        </div>
    <% end %>

</div>
